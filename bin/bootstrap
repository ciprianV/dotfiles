#!/usr/bin/env bash
#
# bootstrap installs things.

cd "$(dirname "$0")/.."
DOTFILES_ROOT=$(pwd -P)

. $DOTFILES_ROOT/bin/lib/functions.sh

set -e

install_dotfiles () {
  local overwrite_all=false backup_all=false skip_all=false
  for src in $(find -H "$DOTFILES_ROOT" -maxdepth 2 -name '*.symlink' -not -path '*.git*')
  do
    dst="$HOME/.$(basename "${src%.*}")"
    link_file "$src" "$dst"
  done
}

# find the installers and run them iteratively
find $DOTFILES_ROOT -name install.sh | while read installer ; do info "› ${installer}" ; sh -c "${installer}" ; done

# Upgrade homebrew
info "› brew update"
brew update

# Run Homebrew through the Brewfile
info "› brew bundle"
brew bundle

# find the configuration scripts and run them iteratively
find $DOTFILES_ROOT -name configure.sh | while read installer ; do info "› ${installer}" ; sh -c "${installer}" ; done

# Install dotfiles
info "› Installing dotfiles"
install_dotfiles

echo ''
success 'All installed!'
